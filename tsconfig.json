{
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "module": "commonjs",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["es2015", "es2018", "dom"],
        "target": "es5",
        "resolveJsonModule": true,
        "typeRoots": ["./"],
        "types": [
            "node",
            "@types/chroma-js",
            "@types/compression",
            "@types/express",
            "@types/morgan",
            "@types/mustache",
            "@types/nunjucks",
            "@types/lodash"
        ],
        "paths": {
            "*": ["./node_modules/*", "./node_modules/@types/*"]
        }
    },
    "include": ["./source/**/*"]
}
